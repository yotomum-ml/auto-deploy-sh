# 顶部必须指定 root = true，否则会继续向上查找父目录的配置
root = true

# 所有文件的默认规则
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown 保留尾部空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# Makefile 通常要求 tab 缩进
[Makefile]
indent_style = tab
